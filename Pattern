class Solution {
    public void pattern7(int n) {
        for(int i=0;i<n;i++){  // Loop through each row
            for(int j=0;j<n-i-1;j++){  // Print leading spaces
                System.out.print(" ");
            }
            for(int j=0;j<2*i+1;j++){  // Print stars
                System.out.print("*");
            }
            System.out.println();
        }

    }
}
